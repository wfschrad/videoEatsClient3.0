doctype html
html
  head
    title VideoEats - #{title}
    link(href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh", crossorigin="anonymous")
    link(type="text/css" href="/style.css" rel="stylesheet")
    link(rel="api" href=`${api}`)
    link(rel="icon" href='/images/favicon.ico')
    meta(property='og:title' content="VideoEats")
    meta(property='og:image' content="https://video-eats-client.herokuapp.com/images/videoEats-Home.png")
    meta(property='og:description'
        content="VideoEats is a web app that allows users to post video reviews for businesses in San Francisco. Users can write both text reviews as well as attach video reviews.")
    meta(property="og:image:type" content="image/png")
    meta(property="og:image:width" content="200")
    meta(property="og:image:height" content="200")
    script(src="https://kit.fontawesome.com/41f75aa0b1.js" crossorigin="anonymous")
    
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light.navbar-container
      #home
        a.navbar-brand(href='/') VideoEats
      #nav-search
        .nav-item.dropdown.navbar-category-dropdown
            button#navbarDropdown.nav-link.dropdown-toggle(type='button' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
              | Search for:
            .dropdown-menu(aria-labelledby='navbarDropdown')
              a.dropdown-item#item-name(href='#') Restaurant Name
              //-a.dropdown-item#item-location(href='#') Locations
              a.dropdown-item#item-tag(href='#') Category
              //-.dropdown-divider
        #navbar-search-form.ml-2
          form.form-inline.navbar-search.my-2.my-lg-0
            input.form-control.mr-sm-2.searchField(type='text' placeholder='Search' id="navbarSearch")
            select.form-control.hidden.mr-sm-2#category-tags
              option.category-item#category-default
            button.btn.btn-outline-success.my-2.my-sm-0#search-btn(type='submit') Search
      #account-options
        #navbarSupportedContent.collapse.navbar-collapse 
          ul.navbar-nav.mr-auto
            span(class='navbar-text px-4 navLoggedIn_Welcome hidden') 
            li.nav-item
              a.nav-link(class='navLoggedOut' href='/log-in') Log in
            li.nav-item
              a.nav-link(class='navLoggedOut' href='/sign-up') Sign up
            form(class='form-inline pr-4' action='/user/logout' method='post' style="padding-right:100px;")
            button(id='logout_btn' class='btn btn-sm btn-warning navLoggedIn_Logout hidden' type='submit') Logout
    block content
    footer#footer
      .footer__section--left
        h6 Welcome to VideoEats
        h6 Copyright &copy; VideoEats 2020
      .footer__right--right
        h6.footer__about About the Developers
        ul.footer__team
          li.footer__team--styles
            div William Shrader
            a(href="https://www.linkedin.com/in/william-schrader-7ba014199/" target="_blank")
              i.fab.fa-linkedin.footer__social-icon--linkedin
            a(href="https://github.com/wfschrad" target="_blank")
              i.fab.fa-github-square.footer__social-icon--github
          li.footer__team--styles
            div Alan Li
            a(href="https://www.linkedin.com/in/alan-li-730143133/" target="_blank")
              i.fab.fa-linkedin.footer__social-icon--linkedin
            a(href="https://github.com/alanli011" target="_blank")
              i.fab.fa-github-square.footer__social-icon--github
          li.footer__team--styles
            div Drew Bartleman
            a(href="https://www.linkedin.com/in/drew-bartleman/" target="_blank")
              i.fab.fa-linkedin.footer__social-icon--linkedin
            a(href="https://github.com/DBartleman" target="_blank")
              i.fab.fa-github-square.footer__social-icon--github
    script(type="module" src="/js/navbar-search.js")
    script(type="module" src="/js/user-auth.js")
    script(type="module" src="/js/log-out.js")